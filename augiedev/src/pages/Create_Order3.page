<apex:page controller="CreateOrderController" sidebar="false">

<style>
.line {
   width: 50px;
}
.itemCode {
   width:100px;
}
.quantity {
   width:50px;
}
.quantityTitle {
   vertical-align: middle;
   font-weight: bold;
   font-size: 14px;
   text-align: center;   
   width:20px;
}
.title {
   vertical-align: middle;
   font-weight: bold;
   font-size: 14px;
   text-align: center;   
}
</style>

<apex:form >

<center><h1>Create Order - Step 3 of 3</h1></center><br />

<apex:pageBlock >
    <apex:pageBlockButtons >
       <apex:commandButton action="{!createOrder2}" value="Previous" styleClass="btn" />
       <apex:commandButton action="{!createOrder4}" value="CONFIRM ORDER" styleClass="btn" />
     </apex:pageBlockButtons>


<apex:pageBlockSection title="Account Information">
   <apex:pageBlockSectionItem >
      <apex:outputText value="Account: " />
      <apex:outputText value="{!acc.Name}" />
	</apex:pageBlockSectionItem>
	
	<apex:pageBlockSectionItem >
	   <apex:outputText value="Contact: " />
	   <apex:outputText value="{!con.FirstName} {!con.LastName}" />
	</apex:pageBlockSectionItem>
	
	<apex:pageBlockSectionItem >
	   <apex:outputText value="Address: " />
	<apex:panelGrid columns="1">
	      <apex:outputText value="{!acc.BillingStreet}" />
	      <apex:outputText value="{!acc.BillingCity}, {!acc.BillingPostalCode}" />
	      <apex:outputText value="{!acc.BillingCountry}" />      
	</apex:panelGrid>
</apex:pageBlockSectionItem>  
	
</apex:pageBlockSection>

	<apex:pageBlockSection title="Order Information">
	   <apex:pageBlockSectionItem >
	      <apex:outputText value="Your Reference Number: " />
	      <apex:outputText id="referenceNumber" value="{!referenceNumber}" />
	   </apex:pageBlockSectionItem>

	   <apex:pageBlockSectionItem >
	      <apex:outputText value="Desired Delivery Date" />
	      <apex:outputText id="deliveryDate" value="{!deliveryDate}" />
	   </apex:pageBlockSectionItem>
	</apex:pageBlockSection>

<apex:pageBlockSection title="Order Lines" columns="1">
   
   <apex:outputText value="FLUID ROWER" style="font-size: 18px;" />
   <apex:pageBlockTable title="FLUID ROWER" width="100%" value="{!fluidRowerOrdered}" var="ip" border="2" cellspacing="2" cellpadding="2">
	   <apex:column width="150px">
	      <apex:facet name="header"><center>MODEL</center></apex:facet>
	      <apex:outputText value="{!ip.model}" />
	   </apex:column>
	   <apex:column width="400px">
	      <apex:facet name="header"><center>DESCRIPTION</center></apex:facet>
	      <apex:outputText value="{!ip.description}" />
	   </apex:column>
	   <apex:column width="200px">
	      <apex:facet name="header"><center>COLLECTION LOCATION</center></apex:facet>
	      <apex:outputText value="{!ip.collectionLocation}" />
	   </apex:column>   
	   <apex:column width="100px">
	      <apex:facet name="header"><center>UNIT PRICE</center></apex:facet>
	      <apex:outputText value="USD {!ip.unitPrice}" />
	   </apex:column>    
	   <apex:column width="100px">
	      <apex:facet name="header"><center>QUANTITY</center></apex:facet>
	      <apex:outputText value="{!ip.quantity}"   />
	   </apex:column>
	   <apex:column >
	      <apex:facet name="header"><center>TOTAL PRICE</center></apex:facet>
	      <apex:outputText value="USD {!ip.totalPrice}" id="totalPrice" />
	   </apex:column>
	</apex:pageBlockTable>
	
   <apex:outputText value="SIGNATURE SERIES PLATE LOADED" style="font-size: 18px;" />
   <apex:pageBlockTable title="SIGNATURE SERIES PLATE LOADED" width="100%" value="{!signatureSPLOrdered}" var="ip" border="2" cellspacing="2" cellpadding="2">
	   <apex:column width="150px">
	      <apex:facet name="header"><center>MODEL</center></apex:facet>
	      <apex:outputText value="{!ip.model}" />
	   </apex:column>
	   <apex:column width="400px">
	      <apex:facet name="header"><center>DESCRIPTION</center></apex:facet>
	      <apex:outputText value="{!ip.description}" />
	   </apex:column>
	   <apex:column width="200px">
	      <apex:facet name="header"><center>COLLECTION LOCATION</center></apex:facet>
	      <apex:outputText value="{!ip.collectionLocation}" />
	   </apex:column>   
	   <apex:column width="100px">
	      <apex:facet name="header"><center>UNIT PRICE</center></apex:facet>
	      <apex:outputText value="USD {!ip.unitPrice}" />
	   </apex:column>    
	   <apex:column width="100px">
	      <apex:facet name="header"><center>QUANTITY</center></apex:facet>
	      <apex:outputText value="{!ip.quantity}"   />
	   </apex:column>
	   <apex:column >
	      <apex:facet name="header"><center>TOTAL PRICE</center></apex:facet>
	      <apex:outputText value="USD {!ip.totalPrice}" id="totalPrice" />
	   </apex:column>
	</apex:pageBlockTable>	
	
</apex:pageBlockSection>
</apex:pageBlock>
</apex:form>
</apex:page>