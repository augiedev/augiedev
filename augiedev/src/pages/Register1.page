<apex:page controller="RegisterController" showHeader="false" sidebar="false">
<!-- Begin Default Content REMOVE THIS -->
<h1>Register 1</h1>
<center>
<apex:form >
   <apex:pageBlock title="Register (Step 1 of 2)">
   
      <apex:facet name="footer">
         <apex:commandButton action="{!register2}" value="Next" styleClass="btn" />
      </apex:facet>
      <apex:pageMessages id="error"/>
      <apex:panelGrid width="758" cellpadding="0" cellspacing="0" bgcolor="white" columns="2">
         <apex:outputLabel value="{!$ObjectType.Contact.Fields.FirstName.label}" for="firstname"/>
         <apex:inputText required="true" id="firstname" value="{!firstname}"/>
         <apex:outputLabel value="{!$ObjectType.Contact.Fields.LastName.label}" for="lastname"/>
         <apex:inputText required="true" id="lastname" value="{!lastname}"/>
         <apex:outputLabel value="{!$Label.site.username}" for="username"/>
         <apex:inputText required="true" id="username" value="{!username}"/>
         <apex:outputLabel value="{!$Label.site.email}" for="email"/>
         <apex:inputText required="true" id="email" value="{!email}"/>
         <apex:outputLabel value="{!$Label.site.password}" for="password"/>
         <apex:inputSecret id="password" value="{!password}"/>
         <apex:outputLabel value="{!$Label.site.confirm_password}" for="confirmPassword"/>
         <apex:inputSecret id="confirmPassword" value="{!confirmPassword}"/>      
      </apex:panelGrid>
   </apex:pageBlock> 
</apex:form>
</center> 
</apex:page>